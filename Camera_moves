#include <Servo.h>

Servo up_down, left_right;
byte Input_data[30];
int i;

void setup() {

  up_down.attach(5);
  left_right.attach(6);
  Serial.begin(9600);
}

void loop() {

  class Camera_movement
  {
      Camera_movement::Camera_movement() // intialization
      {
        current_pos = 2048;
        up_down.write(current_pos);
        left_right.write(current_pos);

      }
      void Camera_movement::MOVE_LEFT(byte b) // Operating the Camera 
                                             // b = input buffer information
      {
        if( b == 0x03) // left movement
          {
            while ( b == 0x01) // checks array number
            {
              for ( i = 0; i < 4096 && i > 0 ; i ++ )
              current_pos ++;
              left_right.write(current_pos);
            }
          }
         else{}
           
      }
      void Camera_movement::MOVE_RIGHT(byte b)   
      {
        if( b == 0x03) // right movement
          {
            while ( b == 0x02) // checks array number
            {
              for ( i = 0; i < 4096 && i > 0 ; i ++ )
              current_pos --;
              left_right.write(current_pos);
            }
          }
         else{}
      }
      void Camera_movement::MOVE_UP(byte b)   
      {
        if( b == 0x04) // right movement
          {
            while ( b == 0x01) // checks array number
            {
              for ( i = 0; i < 4096 && i > 0 ; i ++ )
              current_pos ++;
              up_down.write(current_pos);
            }
          }
         else{}
      }
      void Camera_movement::MOVE_DOWN(byte b)   
      {
        if( b == 0x04) // right movement
          {
            while ( b == 0x02) // checks array number
            {
              for ( i = 0; i < 4096 && i > 0 ; i ++ )
              current_pos --;
              up_down.write(current_pos);
            }
          }
    
      
  };
  // put your main code here, to run repeatedly:


}
